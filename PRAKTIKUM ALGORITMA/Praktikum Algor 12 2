class mahasiswa :

    def __init__(self, nilai, nama):
        self.nilai = nilai
        self.nama = nama


    def ubah(self):
        print("Nama : " + self.nama)
        print("Nilai : " + str(self.nilai))


perulangan = 0
while perulangan == 0 :

    print("\n Program OOP ")
    print("1. Mendeklarasikan Objek") 
    print("2. Menampilkan Objek")
    print("3. Mengganti Objek")
    print("4. Menghapus Objek")
    print("5. Menutup Program")

    pilihan = int(input("Masukan Pilihan (1/2/3/4/5) : "))

    if pilihan == 1 :
         nama = str(input("Masukan Nama : "))
         nilai = str(input("Masukan Nilai : "))
         biodata = mahasiswa(nilai,nama)
         print("Data Berhasil Ditambahkan")

    elif pilihan == 2 :
         biodata = mahasiswa(nilai,nama)
         biodata.ubah()

    elif pilihan == 3 :
         A = "nama"
         B = "nilai"
         print("A : Nama")
         print("B : Nilai")
         perubahan = input("Masukan Pilihan : ")

         if perubahan == "A":
             nama = (input("Masukan Nama Terbaru : "))
             print("Nama Terubah!")

         elif perubahan == "B":
             nilai = (input("Masukan Nilai Terbaru : "))
             print("Nilai Terubah!")
         else :
             print("Masukan Pilihan Yang Benar!")

    elif pilihan == 4 :
         nama = "none"
         nilai = "none"
         print("Data Terhapus!")

    elif pilihan == 5:
         print("See You Later!")
         break
